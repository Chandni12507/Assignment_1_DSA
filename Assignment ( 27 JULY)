#include<stdio.h>
#include<stdlib.h>

size_t arr[50];
int base_value(int);               // func defination

int base_value(int n)              // func declaraction
{
    int n, m = 0 , max=0 , a=0;  
    while(n>0)
    {
        a = n% 10;                  //modulas of number
        n = n/10;
        if(a>m)
        {
            max = a;
        }
        base_value = max + 1;               //highest base of number
        return base_value;
    }
    
}
int main()
{
    for(int i=0 ; i<50 ; i++)
    {
        arr[i] = rand()%5000000000 + 5000000000;         //input of random integers
    }
    printf("%d" , arr[i]);         // Printing array of random values
    base_value(n)                            //base_value func calling
}
   
